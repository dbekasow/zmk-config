#define HOMEROW(KEY, LABEL, TAPPING) \
    KEY: hm_##LABEL { \
        compatible = "zmk,behavior-hold-tap"; \
        label = ZMK_MACRO_STRINGIFY(hm_##LABEL); \
        #binding-cells = <2>; \
        tapping-term-ms = <TAPPING>; \
        quick-tap-ms = <0>; \
        flavor = "tap-preferred"; \
        bindings = <&kp>, <&kp>; \
    };

// Homerow mods with increasing tapping terms based on finger strength
HOMEROW(hmi, index,  160)  // index: fastest response
HOMEROW(hmm, middle, 200)  // middle finger
HOMEROW(hmr, ring,   240)  // ring finger
HOMEROW(hmp, pinky,  280)  // pinky: slowest response
